{
  "name": "tsc-rest-api",
  "version": "1.0.0",
  "description": "NodeJS Typescript Rest-API",
  "main": "./build/index.js",
  "scripts": {
    "clean": "rimraf build",
    "build": "tsc",
    "start": "node ./build/index.js",
    "start:dev": "npm-run-all clean build --parallel watch:build watch:server --print-label",
    "watch:build": "tsc --watch",
    "watch:server": "nodemon ./build/index.js",
    "test": "mocha -r ts-node/register ./src/test/**/*.ts"
  },
  "author": "SKJALAL",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "express": "^4.18.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.7.23",
    "@types/sinon": "^10.0.13",
    "chai": "^4.3.6",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.20",
    "rimraf": "^3.0.2",
    "sinon": "^14.0.0",
    "ts-node": "^10.9.1"
  }
}
